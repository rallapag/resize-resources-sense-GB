<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme" parent="@android:style/Theme" />
    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="titleBarStyle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35.0px</item>
    </style>
    <style name="titleBarShadowStyle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35.0px</item>
        <item name="android:layout_marginRight">2.0px</item>
        <item name="android:layout_marginBottom">2.0px</item>
    </style>
    <style name="voiceRecordTextStytleB">
        <item name="android:textSize">16.0px</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="voiceRecordTextStytleC">
        <item name="android:textSize">12.0px</item>
        <item name="android:textColor">@color/text_clor_minor</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35.0px</item>
        <item name="android:shadowColor">@color/text_color_shadow</item>
        <item name="android:shadowDx">-1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="stylecheckBoxText">
        <item name="android:textSize">13.0px</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
